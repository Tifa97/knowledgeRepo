<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:background="@color/black">

        <TextView
            android:id="@+id/btn_retrofit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/demonstrate_retrofit"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@drawable/rounded_background_yellow"
            android:padding="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/demonstrate_room"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@drawable/rounded_background_yellow"
            android:padding="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_retrofit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

